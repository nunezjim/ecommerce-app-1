<h1> Create a New Product </h1>

<%= form_tag("/products", method: 'post') do %>

<form>
  <fieldset class="form-group">
<%= label_tag(:enter, "Enter a product name") %>
<%= text_field_tag(:name) %>
</fieldset>


<div>
<%= label_tag(:enter, "price") %>
<%= text_field_tag(:price) %>
</div>

<div>
<%= label_tag(:enter, "image") %>
<%= text_field_tag(:image) %>
</div>

<div>
<%= label_tag(:enter, "description") %>
<%= text_field_tag(:description) %>

<div>
<%= submit_tag("Create Product") %>
</div>

<% end %>
